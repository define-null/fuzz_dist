#!/usr/bin/env bash

docker exec \
    -it -w /jepsen \
    -e MIX_ENV=prod \
    -e MIX_BUILD_ROOT=/var/jepsen/shared/fuzz_dist/_build \
    jepsen-control \
    mix release --overwrite --path /var/jepsen/shared/fuzz_dist

